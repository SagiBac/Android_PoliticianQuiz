<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".Activities.EndGame">

    <ImageView
        android:id="@+id/gameoverIV"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/game_over" />

    <TextView
        android:id="@+id/YourScoreTV"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@id/gameoverIV"
        android:layout_centerHorizontal="true"
        android:text="@string/YourScore"
        android:textAlignment="center"
        android:textColor="#ffbf00"
        android:textSize="60sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ScoreNumberTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/YourScoreTV"
        android:layout_centerHorizontal="true"
        android:text="4"
        android:textAlignment="center"
        android:textColor="#ffbf00"
        android:textSize="50sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/menuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ScoreNumberTV"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layoutDirection="ltr">

        <Button
            android:id="@+id/menuBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="2"
            android:background="@drawable/shape3"
            android:text="Logout"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/restart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_toRightOf="@+id/menuBtn"
            android:layout_weight="2"
            android:background="@drawable/shape3"
            android:text="Restart"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/RankingTable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="2"
            android:background="@drawable/shape3"
            android:text="RankingTable"
            android:textColor="#FFF"
            android:textSize="20sp" />


    </LinearLayout>


</RelativeLayout>
